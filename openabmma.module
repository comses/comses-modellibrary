function openabmma_getFileCount ($directory)
{
	$d = @dir($directory);
	if ($d == null || $d == false)
		return;

	$count = 0;
	while (false !== ($entry = $d->read()))
		$count++;

	$d->close();

	return $count-2;	// Exclude "." and ".."
}

function openabmma_getFirstFile ($directory)
{
	$d = @dir($directory);
	if ($d == null || $d == false)
		return;

	while (false !== ($entry = $d->read()))
		if ($entry != "." && $entry != "..")
			return $entry;

	$d->close();

	return "";	// Exclude "." and ".."
}

